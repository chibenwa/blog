	<div class="jumbotron">
		<form class="form-horizontal" role="form" action="/post_new_projet" method="post">
		    <legend>Création de projets</legend>
		    <div class="control-group">
			<div class="controls">
			    <input id="name" name="name" size="35" placeholder="Nom du projet" class="input-xlarge" type="text"/>
			</div>
		    </div>
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    <input id="summary" name="summary" size="100" placeholder="Un résumé de votre projet" class="input-xlarge" required="" type="text"/>    
			</div>
		    </div>
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    <input id="git_clone" name="git_clone" size="100" placeholder="Lien pour pouvoir cloner votre dépot git" class="input-xlarge" required="" type="text"/>    
			</div>
		    </div>
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    Votre projet est il finit ? <br/>
			    <input type="radio" name="ended" value="0" checked="checked">En cours<br/>
			    <input type="radio" name="ended" value="1">Finit
			</div>
		    </div>	    
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    État du projet : <br/>
			    <input type="radio" name="etat" value="0" checked="checked">On travaille dessus<br/>
			    <input type="radio" name="etat" value="1">Momentanément en pause <br/>
			    <input type="radio" name="etat" value="2">Projet à l'abandon <br/>
			    <input type="radio" name="etat" value="3">Finis <br/>
			</div>
		    </div>	    
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    <input id="progress" name="progress" size="100" placeholder="Avancement du projet ( entre 0 et 100 )" class="input-xlarge" required="" type="text"/>    
			</div>
		    </div>
		    <br/>
		    <div class="control-group">
			<div class="controls">                     
			    <textarea id="details" name="details" rows="50" cols="100" onclick="empty('details')">Détail de votre projet</textarea>
			</div>
		    </div>	    
		    <br/>
		    <div class="control-group">
			<div class="controls">
			    <input type="submit" value="Envoyer" class="btn btn-success"/>
			</div>
		    </div>
		</form>
	</div>
    </div>
