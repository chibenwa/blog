<!DOCTYPE html>
<html>
    <% include header.ejs %> 
    <body role="document">

    <% include navbar.ejs %>

    <div class="container theme-showcase" role="main">
	<div class="jumbotron">
	
	    <h1>Archives </h1>
	    
	    <h2>Mois de <%= month %>  <%= year %></h2>
	    <br/>
	    
	    <%
		for( var i = 0; i < articles.length; i++ ) {
	    %>
	    <div>
		<span style="float:right;"><%= articles[i].date.getDate() %>/
		<% 
		    if(articles[i].date.getMonth() +1 < 10) {
		%>0<%}%><%= articles[i].date.getMonth() +1 %>/
		<%= articles[i].date.getFullYear() %></span>
		<h3><a href="/article/<%= articles[i].id %>"><%= articles[i].title %></a></h3>
		<div>
		    <b>
			<%=articles[i].summary%>
		    </b>
		</div>
		<br/><br/>
	    </div>
	    <%
		}
	    %>
	    
	</div>
    </div>


    </body>
</html>

